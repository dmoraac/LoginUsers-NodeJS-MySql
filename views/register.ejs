<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/main.css">
    <title>Registrar Usuario</title>
</head>
<body>
    <div class="register_container">
        <h2>Registrarme</h2>
        <form class="form_register_user" action="/register" method="POST">
            <input type="number" name="id" placeholder="Cédula ID" id="id" required>
            <input type="text" name="name" placeholder="Nombre completo" id="name" required>
            <input type="text" name="last_name1" placeholder="Primer Apellido" id="last_name1" required>
            <input type="text" name="last_name2" placeholder="Segundo Apellido" id="last_name2" required>
            <input type="text" name="user" placeholder="Usuario" id="user" required>
            <input type="password" name="password" placeholder="Contraseña" id="password" required>
            <div class="btn_container">
                <button type="submit" class="btn_save_register"><span>Guardar</span></button>
                <button type="button" class="btn_cancel"><a class="btn_cancel" href="/"><span>Cancelar</span></a></button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!--Sweet Alert-->

    <% if (typeof alert != 'undefined') { %>
        <script>
            Swal.fire ({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer: '<%= timer %>',
            }).then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
    <% } %>

</body>
</html>